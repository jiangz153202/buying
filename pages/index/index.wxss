/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navigateBar{
  background-color: red;
  min-height: 88px;
  width: 100%;
}

.placeholder{
  position: fixed;
  background: #fff;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding-top: 0rpx;
  width: 100%;
  height: 100vh;
  pointer-events: none;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder .placeholder-image{
  width: 750rpx;
  height: 100vh;
}